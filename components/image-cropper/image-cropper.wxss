page {
  width: 100%;
  height: 100vh;
  overflow: hidden;
  background: #000;
}
.image-cropper-container {
  width: 100%;
  /* height: 100vh; */
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 10px;
  box-sizing: border-box;
  overflow: hidden;
}

.image-cropper {
  width: 100%;
  /* height: 700rpx; */
  position: relative;
  overflow: hidden;
  box-sizing: border-box;
}

.image-wrapper {
  position: absolute;
  z-index: 1;
}

.target-image {
  display: block;
}

.cropper-frame {
  width: 100%;
  position: absolute;
  z-index: 2;
  border: 2rpx solid #fff;
  box-sizing: border-box;
}
.cropper_circular {
  width: 150px;
  position: absolute;
  z-index: 3;
  border: 2rpx solid #fff;
  box-sizing: border-box;
  border-radius: 100%;
  box-shadow: 0rpx 0rpx 2500rpx 2500rpx rgba(0, 0, 0, 0.411);
}
.cropper-mask {
  position: absolute;
  background-color: rgba(0, 0, 0, 0.6);
  z-index: 3;
}

.top,
.bottom {
  width: 100%;
  left: 0;
}

.controls {
  display: flex;
  width: 100%;
  border-top: 1rpx solid rgba(141, 141, 141, 0.295);
  position: fixed;
  bottom: 0;
  height: 140rpx;
  font-size: 38rpx;
  color: #fff;
  padding: 20rpx 40rpx;
  box-sizing: border-box;
}

.btn1 {
  /* width: 300rpx; */
  flex: 1;
}
.btn2 {
  flex: 1;
  display: flex;
  justify-content: flex-end;
}

.cropperCanvas {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  top: 9999999rpx;
}
